  function validateAndFormatMobileNumber() {
  // Get the input element
  const mobileNumberInput = document.getElementById('mobileNumber');
  
  // Get the user's input
  let mobileNumber = mobileNumberInput.value;

  // Remove any non-numeric characters (e.g., spaces, dashes)
  mobileNumber = mobileNumber.replace(/\D/g, '');

  // Define a regular expression pattern for a valid mobile number (customize as needed)
  const mobileNumberPattern = /^\d{10}$/; // Example: 10-digit mobile number

  if (mobileNumberPattern.test(mobileNumber)) {
    // The input is a valid mobile number, format it as needed (e.g., add dashes)
    mobileNumber = mobileNumber.replace(/(\d{3})(\d{3})(\d{4})/, '$1-$2-$3');
    mobileNumberInput.value = mobileNumber; // Set the formatted value back to the input
  } else {
    // The input is not a valid mobile number, you can display an error message
    alert('Please enter a valid 10-digit mobile number.');
    mobileNumberInput.value = ''; // Clear the input field
  }
